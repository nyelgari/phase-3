@using System.Text.Json
@inject IHttpContextAccessor HttpContextAccessor
@{
    var session = HttpContextAccessor.HttpContext?.Session;
    var bookedJson = session?.GetString("bookings");
    int count = 0;

    if (!string.IsNullOrEmpty(bookedJson))
    {
        var list = JsonSerializer.Deserialize<List<int>>(bookedJson);
        count = list?.Count ?? 0;
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Equinox</a>
                <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Club" asp-action="List">Clubs</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Class" asp-action="List">Classes</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Membership" asp-action="List">Membership</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="PrivateClass" asp-action="List">Private Training</a></li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Booking" asp-action="Index">
                                Bookings
                                @if (count > 0)
                                {
                                    <span class="badge bg-danger">@count</span>
                                }
                            </a>
                        </li>
                        <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container pt-4">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["Message"]
            </div>
        }

        @RenderBody()
    </main>

    <footer class="mt-4 text-center">
        <ul class="list-inline">
            <li class="list-inline-item"><a asp-controller="Home" asp-action="Contact">Contact us</a></li>
            <li class="list-inline-item"><a asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
            <li class="list-inline-item"><a asp-controller="Home" asp-action="Terms">Terms & Condition</a></li>
            <li class="list-inline-item"><a asp-controller="Home" asp-action="Cookie">Cookie Policies</a></li>
        </ul>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

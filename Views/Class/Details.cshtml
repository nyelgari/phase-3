@model Equinox.Models.EquinoxClass

@{
    ViewData["Title"] = "Class Details";
    // These should be set in ClassController.Details:
    //   ViewBag.ActiveClubId = clubId;
    //   ViewBag.ActiveCategoryId = categoryId;
    var clubId     = ViewBag.ActiveClubId    ?? "all";
    var categoryId = ViewBag.ActiveCategoryId ?? "all";
}

<h2>@Model.Name</h2>

<div class="row">
  <div class="col-md-5">
    <img src="~/images/@Model.ClassPicture"
         alt="@Model.Name"
         class="img-fluid rounded" />
  </div>
  <div class="col-md-7">
    <p><strong>Category:</strong> @Model.ClassCategory.Name</p>
    <p><strong>Club:</strong>     @Model.Club.Name</p>
    <p><strong>Day:</strong>      @Model.ClassDay</p>
    <p><strong>Time:</strong>     @Model.Time</p>
    <p><strong>Coach:</strong>    @Model.User.Name</p>
  </div>
</div>

<form asp-action="Book" method="post" class="mt-3">
  @Html.AntiForgeryToken()
  <input asp-for="EquinoxClassId" type="hidden" />
  <input name="clubId"     type="hidden" value="@clubId" />
  <input name="categoryId" type="hidden" value="@categoryId" />

  <button type="submit" class="btn btn-primary">
    Book this class
  </button>
</form>

<a asp-action="List"
   asp-route-clubId="@clubId"
   asp-route-categoryId="@categoryId"
   class="btn btn-secondary mt-3">
  Back
</a>
